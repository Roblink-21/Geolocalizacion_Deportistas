<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="geoSport.Views.HomePage">
    <ContentPage.Content>
        <StackLayout Padding="16">
            <Label Text="Perfil"
                VerticalOptions="Center" 
                HorizontalOptions="Center"
                   FontSize="Large"/>
            <Label Text="" x:Name="LblUser"
                   FontSize="Large"
                   VerticalOptions="Center"></Label>
            <Label Text="" x:Name="LblID"
                   FontSize="Large"
                   VerticalOptions="Center"></Label>
            <Button Text="Ver grupo"
                    x:Name="BtnLocation"
                    Clicked="butLocation_Clicked"></Button>
            
           
            <Button Text="Cambiar contraseña" x:Name="BtnChangePassword" Clicked="BtnChangePassword_Clicked"></Button>

            <Button Text="SALIR" x:Name="SalirButton" Clicked="BtnLogout_Clicked"></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>